                    <label for="Description">Description</label>
                    <input type="text" class="form-control" placeholder="Enter description" for="View.Description">
                  </div>
                  <div class="form-group">
                    <label for="Abbreviation">Abbreviation</label>
                    <input type="text" class="form-control" placeholder="Enter abbreviation" for="View.Abbreviation">
                  </div>
