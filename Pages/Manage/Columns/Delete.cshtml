@page
@model Manalacdave.MidtermExam.Pages.Manage.Columns.Delete
@{
}
<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <h3>Delete</h3>
                    <div class="form-group">
                        <input type="hidden" asp-for="View.Id" />
                        <label asp-for="View.Id">Name</label>
                        <input type="text" class="form-control" placeholder="Enter role name" asp-for="View.Id" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Id">Description</label>
                        <input type="text" class="form-control" placeholder="Enter description" asp-for="View.Id" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Id">Abbreviation</label>
                        <input type="text" class="form-control" placeholder="Enter consumable" asp-for="View.Id" disabled>
                    </div>
                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="~/manage/roles" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>